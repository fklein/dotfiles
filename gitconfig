[alias]
    count = shortlog -sn
    st = status
    update-submodules = submodule update --init --recursive
    upgrade-submodules = submodule update --init --remote
    zip = ! "zip() { git archive --format zip --prefix=\"${PWD##*/}/\" HEAD -o \"${1}\"; }; zip"

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[commit]
    template = ~/.gitmessage

[diff]
  colorMoved = default

[push]
    default = upstream

[pull]
    ff = only

[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.gitignore

[cola]
    spellcheck = false

