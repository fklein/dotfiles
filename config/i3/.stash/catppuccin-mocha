# Catppuccin Mocha color palette
set $rosewater  #f5e0dc
set $flamingo   #f2cdcd
set $pink       #f5c2e7
set $mauve      #cba6f7
set $red        #f38ba8
set $maroon     #eba0ac
set $peach      #fab387
set $yellow     #f9e2af
set $green      #a6e3a1
set $teal       #94e2d5
set $sky        #89dceb
set $sapphire   #74c7ec
set $blue       #89b4fa
set $lavender   #b4befe
set $text       #cdd6f4
set $subtext1   #bac2de
set $subtext0   #a6adc8
set $overlay2   #9399b2
set $overlay1   #7f849c
set $overlay0   #6c7086
set $surface2   #585b70
set $surface1   #45475a
set $surface0   #313244
set $base       #1e1e2e
set $mantle     #181825
set $crust      #11111b

# Class                  # Border    # Backgr.  # Text     # Indic.    # Child border
client.focused           $lavender   $lavender  $base      $lavender   $lavender
client.focused_inactive  $surface1   $surface1  $subtext1  $surface1   $surface1
client.unfocused         $surface0   $surface0  $subtext0  $surface0   $surface0
client.urgent            $peach      $peach     $base      $peach      $peach
client.placeholder       #000000     $overlay0  $text      #000000     $overlay0

client.background        $base


bar {
    colors {
        background         $base
        statusline         $text
        separator          $surface1

        # Class              # Border    # Backgr.   # Text
        focused_workspace    $mauve      $mauve      $base
        active_workspace     $base       $surface2   $base
        inactive_workspace   $base       $surface0   $subtext0
        urgent_workspace     $peach      $peach      $base
        binding_mode         $maroon     $maroon     $base
    }
}
