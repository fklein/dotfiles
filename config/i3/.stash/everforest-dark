        # Target            # Border  # Backgr.  # Text
        focused_workspace   $aqua     $aqua      $bg0
        active_workspace    $bg0      $bg-blue   $fg
        inactive_workspace  $bg0      $bg3       $fg
        urgent_workspace    $bg0      $orange    $bg0
        binding_mode        $bg0      $purple    $bg0
    }
}
