# Target                 # Border   # Backgr.  # Text  # Indic.  # Child border
client.focused           $green     $green     $bg0    $green    $green
client.focused_inactive  $bg5       $bg5       $fg     $bg5      $bg5
client.unfocused         $bg2       $bg2       $fg     $bg2      $bg2
client.urgent            $orange    $orange    $bg0    $orange   $orange
